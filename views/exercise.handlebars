<div class="container">
    <div class="row top-30">
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="exercise">
                <div class="form-group">
                    <label for="title">Exercie Name:</label>
                    <input placeholder="Exercise name" type="text" class="form-control" id="title">
                    <br />


                    <label for="desc">Description:</label>
                    <textarea class="form-control animated" type="text" name="description" id="desc"
                        placeholder="Add description"
                        style="overflow: hidden; overflow-wrap: break-word; resize: auto; height: 34px;"></textarea>

                    <br />

                    <label for="steps">Steps:</label>
                    <textarea class="form-control animated" type="text" name="steps" id="steps" placeholder="Add Steps"
                        style="overflow: hidden; overflow-wrap: break-word; resize: auto; height: 34px;"></textarea>
                    <br />

                    <label for="tips">Tips:</label>
                    <textarea class="form-control animated" type="text" name="steps" id="tips" placeholder="Add Tips"
                        style="overflow: hidden; overflow-wrap: break-word; resize: auto; height: 34px;"></textarea>
                    <br />

                    <label for="warn">Warnings:</label>

                    <textarea class="form-control animated" type="text" name="steps" id="warn"
                        placeholder="Add Warnings"
                        style="overflow: hidden; overflow-wrap: break-word; resize: auto; height: 34px;"></textarea>
                    <br />

                    {{!-- <label for="videoUrl">Video URL:</label>
                    <input placeholder="Add video Url" type="text" class="form-control" id="videoUrl">
                    <br /> --}}


                    <div class="form-group">
                        <label for="category">Select Workout:</label>
                        <select class="form-control" id="workout">
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success submit">Submit</button>
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Custom Script -->

<script src="js/exercise.js" type="text/javascript"></script>